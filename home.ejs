<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Criar Logo</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <main class="wrap">
    <h1>Gerar Logo</h1>
    <p>Pague <b>R$ 5</b> para liberar 1 geração.</p>

    <button id="pay">Pagar R$ 5 e Criar</button>
    <div class="muted" id="status"></div>
  </main>

  <script>
    const btn = document.getElementById("pay");
    const statusEl = document.getElementById("status");

    btn.onclick = async () => {
      btn.disabled = true;
      statusEl.textContent = "Abrindo pagamento...";
      const r = await fetch("/pagar", { method: "POST" });
      const data = await r.json();
      if (data.url) location.href = data.url;
      else statusEl.textContent = "Erro ao abrir pagamento.";
      btn.disabled = false;
    };
  </script>
</body>
</html>
